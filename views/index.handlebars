<div class="content-box">
    <img src="/assets/favicon_io/android-chrome-192x192.png">

    <h1>Eat-Da-Burgers!</h1>

    <div class="left-col">
        <h2>Burgers that are waiting for you to devour them:</h2>

        <ul>
            {{#each burgers}}
            {{#unless devoured}}
            {{> burger-block devoured=true}}
            {{/unless}}
            {{/each}}
        </ul>
    </div>

    <div class="right-col">
        <h2>Burgers that you savagely devoured:</h2>

        <ul>
            {{#each burgers}}
            {{#if devoured}}
            {{> devoured-burger-block devoured=false}}
            {{/if}}
            {{/each}}
        </ul>
    </div>

    <div class="add-form">
        <h2>Add a Burger</h2>
        <form class="create-form">

            <div class="form-group">
                <label for="ca">Burger Name:</label>
                <input type="text" id="ca" name="name">
            </div>
            <br>
            <button type="submit">Add Burger</button>
        </form>
    </div>
</div>